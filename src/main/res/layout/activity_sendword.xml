<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cnp_bg">
    <LinearLayout
        style="@style/container_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_sendword_no_top_line"
        >
        <ImageView
            android:id="@+id/imageview"
            style="@style/face_iv"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/sendword_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首都师范大学信息化师范园"
                android:ellipsize="end"
                android:singleLine="true"
                style="@style/medium_tv"
                android:layout_marginTop="@dimen/view_margin_smallest"
                />
            <TextView
                android:id="@+id/sendword_text_rename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="叶园长"
                android:ellipsize="end"
                android:singleLine="true"
                style="@style/medium_tv"
                android:layout_marginTop="@dimen/view_margin_smallest"
                />
            <TextView
                android:id="@+id/sendword_text_pol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34岁 党员"
                android:singleLine="true"
                style="@style/medium_tv"
                android:layout_marginTop="@dimen/view_margin_smallest"
                />
            <TextView
                android:id="@+id/sendword_text_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原安徽省副省长何闽旭于2006年6月23日被中纪委“双规”，在此之前，中纪委等有关部门已调查证实何闽旭利用职务便利收受王某60万元人民币的问题。"
                android:ellipsize="end"
                android:maxLines="2"
                style="@style/medium_tv"
                android:layout_marginTop="@dimen/view_margin_smallest"
                />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        style="@style/container_view"
        android:background="@drawable/shape_sendword_line">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/sendword_text_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/medium_tv"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    />
            </LinearLayout>
    </ScrollView>
</LinearLayout>