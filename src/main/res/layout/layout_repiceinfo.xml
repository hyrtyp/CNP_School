<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cnp_bg">

    <TextView
        android:id="@+id/foottimetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2013-12-10 食谱"
        style="@style/cnp_school_text_max"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        style="@style/cnp_school_layout"
        android:background="@color/cnp_line_color"/>
        <ListView
            android:id="@+id/schoolnotice_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1px"
            style="@style/cnp_school_layout"
            android:layout_marginTop="0dp"
            />
</LinearLayout>