<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cnp_bg"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cnp_school_text_max"
        android:text="@string/school_into_text"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cnp_school_intro_layoutheight"
        android:orientation="vertical"
        android:background="@drawable/shape_sendword_line"
        style="@style/cnp_school_layout"
        >
        <TextView
            android:id="@+id/schoolintro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/cnp_school_text_min"
            android:layout_marginTop="@dimen/cnp_school_text_margin"
            android:layout_marginBottom="@dimen/cnp_school_text_margin"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/cnp_school_text_max"
        android:text="@string/earth_text"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_sendword_line"
        style="@style/cnp_school_layout"
        >
        <ImageView
            android:id="@+id/schoolmap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cnp_school_image_height_max"
            android:background="@drawable/schoolmap"
            android:layout_margin="@dimen/cnp_school_text_margin_min"
            />
    </LinearLayout>
</LinearLayout>